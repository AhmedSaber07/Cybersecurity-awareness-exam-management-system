@model ExamManagementApp.Dtos.AddQuestionDto

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "إنشاء";
}

<h4>إضافة سؤال</h4>
<hr />
@if (ViewBag.errorChoice != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>خطأ!</strong> @ViewBag.errorChoice
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="إغلاق"></button>
    </div>
}
@if (ViewBag.questionAdded != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>تم إضافة السؤال بنجاح</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="إغلاق"></button>
    </div>
}
<form asp-action="Create">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="form-group">
        <span asp-validation-for="Text" class="text-danger"></span>
        <label asp-for="Text" class="control-label"></label>
        <textarea asp-for="Text" rows="5" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <span asp-validation-for="choiceA" class="text-danger"></span>
        <label asp-for="choiceA" class="control-label"></label>
        <input asp-for="choiceA" class="form-control" />
    </div>
    <div class="form-group">
        <span asp-validation-for="choiceB" class="text-danger"></span>
        <label asp-for="choiceB" class="control-label"></label>
        <input asp-for="choiceB" class="form-control" />
    </div>
    <div class="form-group">
        <span asp-validation-for="choiceC" class="text-danger"></span>
        <label asp-for="choiceC" class="control-label"></label>
        <input asp-for="choiceC" class="form-control" />
    </div>
    <div class="form-group">
        <span asp-validation-for="Answer" class="text-danger"></span>
        <label asp-for="Answer" class="control-label"></label>
        <select asp-for="Answer" class="form-control">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Point" class="text-danger"></span>
        <label asp-for="Point" class="control-label"></label>
        <input asp-for="Point" class="form-control" />
    </div>
    <div class="form-group d-flex justify-content-between pt-2">
        <button class="btn btn-success"><i class="bi bi-plus-circle"></i> إضافة</button>
        <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-box-arrow-left"></i> العودة إلى القائمة</a>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="~/js/script.js"></script>
